@model WebApplication1.Models.Add_Group
@{
    ViewBag.Title = "add_group";
    Layout = "~/Views/Shared/_Layout_system.cshtml";
}
@section content{
    <div class="main-panel">
        <div class="main-content">
            <div class="content-wrapper">
                <div class="container-fluid">
                    <!-- Zero configuration table -->
                    <section id="configuration">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title-wrap bar-success">
                                            <h4 class="card-title">Add New Group </h4>
                                        </div>
                                    </div>
                                    <div class="card-body collapse show">
                                        <form method="post">
                                            <div class="row">
                                                <div class="col-lg-2"></div>
                                                <div class="col-sm-12 col-md-9">
                                                    <div id="DataTables_Table_0_filter"
                                                         class="dataTables_filter">
                                                        <label>
                                                            Group Name :@Html.TextBoxFor(x => x.group1.name_group,
                                   new { @class = "form-control form-control-sm", style = "height: 58px;", aria_controls = "DataTables_Table_0" })

                                                        </label>
                                                    </div>
                                                </div>

                                            </div>
                                            <h6 class="text-danger">@ViewBag.erorr</h6>
                                            <table class="table table-striped table-bordered zero-configuration mt-40 table-group">
                                                <thead>
                                                    <tr>
                                                        <th>Module Name</th>
                                                        <th>Add </th>
                                                        <th>Show</th>
                                                        <th>Edit</th>
                                                        <th>delete</th>


                                                    </tr>
                                                </thead>
                                                <tbody>



                                                    @for (int ss = 0; ss < Model.page1.Count(); ss++)
                                                    {
                                                        <tr>
                                                            <td>@Model.page1[ss].name </td>


                                                            @Html.HiddenFor(m => @Model.page1[ss].id_page)
                                                            @Html.HiddenFor(m => @Model.page1[ss].name)


                                                            <td>  @Html.EditorFor(m => @Model.page1[ss].insert)</td>
                                                            <td>  @Html.EditorFor(m => @Model.page1[ss].show)</td>

                                                            <td>  @Html.EditorFor(m => @Model.page1[ss].update)</td>
                                                            <td>  @Html.EditorFor(m => @Model.page1[ss].delete)</td>






                                                        </tr>
                                                    }



                                                </tbody>

                                            </table>
                                            <div class="col-12">
                                                <input type="submit" value="save" class="col-12 alert-success" />
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>


            </div>
        </div>
    </div>


}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
